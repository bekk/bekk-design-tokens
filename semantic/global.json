{
  "radius": {
    "none": {
      "$type": "borderRadius",
      "$value": "{radius.0}"
    },
    "sm": {
      "$type": "borderRadius",
      "$value": "{radius.1}"
    },
    "md": {
      "$type": "borderRadius",
      "$value": "{radius.2}"
    },
    "lg": {
      "$type": "borderRadius",
      "$value": "{radius.3}"
    },
    "xl": {
      "$type": "borderRadius",
      "$value": "{radius.4}"
    },
    "full": {
      "$type": "borderRadius",
      "$value": "{radius.5}"
    }
  },
  "border-width": {
    "sm": {
      "$type": "borderWidth",
      "$value": "{border-width.1}"
    },
    "md": {
      "$type": "borderWidth",
      "$value": "{border-width.2}"
    },
    "lg": {
      "$type": "borderWidth",
      "$value": "{border-width.3}"
    }
  },
  "border": {
    "default": {
      "$type": "border",
      "$value": {
        "width": "{border-width.sm}",
        "style": "solid",
        "color": "{color.neutral.border-default}"
      }
    },
    "strong": {
      "$type": "border",
      "$value": {
        "color": "{color.neutral.border-strong}",
        "width": "{border-width.md}",
        "style": "solid"
      }
    },
    "dashed": {
      "$type": "border",
      "$value": {
        "color": "{color.neutral.border-default}",
        "width": "{border-width.sm}",
        "style": "dashed"
      }
    },
    "subtle": {
      "$type": "border",
      "$value": {
        "color": "{color.neutral.border-subtle}",
        "width": "{border-width.sm}",
        "style": "solid"
      }
    },
    "focus": {
      "$type": "border",
      "$value": {
        "color": "{color.dominant.border-default}",
        "width": "{border-width.md}",
        "style": "solid"
      }
    }
  },
  "elevation": {
    "raised-default": {
      "$type": "boxShadow",
      "$value": "{shadow.2}"
    },
    "raised-hover": {
      "$type": "boxShadow",
      "$value": "{shadow.5}"
    },
    "raised-pressed": {
      "$type": "boxShadow",
      "$value": "{shadow.3}"
    }
  }
}